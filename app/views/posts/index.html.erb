<div class="container">
  <h1>Blog Index</h1>
    <h2>Posts</h2>
      <div class="cards">
        <div class="row">
          <% @posts.each_with_index do |post, key| %>
            <div class="card col-sm-6 col-lg-4">
              <%= cl_image_tag post.photo.key, height: 300, width: 400, crop: :fill %>
              <%= link_to post_path(post) do %>
                <h5 class="card-title font-weight-bold text-decoration-none"><%= post.title %></h5>
              <% end %>
              <%= post.content ? post.content.truncate(120) : "" %>
            </div>
            <% end %>
          </div>
      </div>
</div>

<div class="container">
  <h1>Blog Index</h1>
    <h2>Posts</h2>
      <% @posts.each do |post| %>
      <div class="card">
        <%= link_to post_path(post) do %>
          <h5 class="card-title font-weight-bold text-decoration-none"><%= post.title %></h5>
        <% end %>
        <%= post.content ? post.content.truncate(120) : "" %>
      </div>
      <% end %>
</div>
